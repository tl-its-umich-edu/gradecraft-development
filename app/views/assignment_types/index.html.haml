.small-12.panel.mainContent

  = content_nav_for AssignmentType

  .small-12.medium-8
    %h3.pagetitle= @title

  .small-12.medium-4.right.columns
    .button-bar.right
      %ul.button-group.context_menu
        %li
          %i.fi-plus
          = "New #{term_for :assignment_type}"

  .small-12.columns
    %table.responsive.nofeatures_dynatable
      %thead
        %tr
          %th Name
          %th Predictor Display
          %th Max value
          %th.button-column
        %tbody
          - current_course_data.assignment_types.each do |assignment_type|
            %tr
              %td= link_to assignment_type.name, assignment_type
              %td= assignment_type.points_predictor_display
              %td= assignment_type.max_value
              %td
                .button-bar
                  %ul.button-group.right.round
                    %li= link_to 'See', assignment_type_path(assignment_type), :class => 'button'
                    %li= link_to 'Edit', edit_assignment_type_path(assignment_type), :class => 'button'
                    %li
                      %a{:href => assignment_type_path(assignment_type), :data => { confirm: 'Are you sure?', method: :delete }, :class => "button" }
                        Delete