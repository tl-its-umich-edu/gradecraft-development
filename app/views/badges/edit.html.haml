.small-12.panel.mainContent

  = content_nav_for @badge, "Edit #{term_for :badge}"

  .small-12.medium-9
    %h3.pagetitle= @title
  
  .small-12.medium-3.right.columns
    .button-bar.right
      %ul.button-group.context_menu
        %li
          %i.fi-pencil
          = link_to "See", badge_path(@badge)
        %li
          %i.fi-results
          = link_to "Award", new_badge_earned_badge_path(:badge_id => @badge)
        %li
          %i.fi-results-demographics
          = link_to "Quick Award", mass_award_badge_path(@badge)

  .small-12.columns

    = render 'form'