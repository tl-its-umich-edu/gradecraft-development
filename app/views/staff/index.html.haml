.small-12.panel.mainContent

  = content_nav_for User, "Staff"

  %h3.pagetitle= @title

  .small-12.columns

    %table.responsive.nofeatures_default_last_name_dynatable
      %thead
        %tr
          %th First Name
          %th Last Name
          %th Role
          %th #{term_for :team}
          %th.button-column
      %tbody
        - current_course.users.alpha.each do |user|
          - if user.is_staff?
            %tr
              %td= link_to user.first_name, staff_path(user)
              %td= link_to user.last_name, staff_path(user)
              %td= user.role.capitalize
              %td
                %ul
                  - user.teams.each do |team|
                    %li= link_to team.try(:name), team
              %td
                .button-bar
                  %ul.button-group.right.round
                    %li= link_to 'See', staff_path(user), {:class => 'button'}
                    %li= link_to 'Edit', edit_user_path(user), {:class => 'button'}
                    %li= link_to 'Delete', user, :class => 'button', :data => { confirm: 'Are you sure?'}, :method => :delete